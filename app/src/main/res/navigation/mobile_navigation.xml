<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.newpath.jeg.sayagainplease.presentation.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.newpath.jeg.sayagainplease.presentation.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/lessonCatalogFragment"
        android:name="com.newpath.jeg.sayagainplease.presentation.ui.lesson_catalog.LessonCatalogFragment"
        android:label="fragment_lesson_catalog"
        tools:layout="@layout/fragment_lesson_catalog" >
        <argument
            android:name="topic_id"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>
    <fragment
        android:id="@+id/nav_classes"
        android:name="com.newpath.jeg.sayagainplease.presentation.ui.gallery.ClassesFragment"
        android:label="ClassesFragment" >
        <action
            android:id="@+id/action_classesFragment_to_lessonCatalogFragment"
            app:destination="@id/lessonCatalogFragment" />
    </fragment>
</navigation>